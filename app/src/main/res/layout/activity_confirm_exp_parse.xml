<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/activity_confirm_exp_parse"
    tools:context="com.example.pmed.mindfulnessmeditation.ConfirmExpParse"
    android:background="#3a4f9c">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirm Parsing"
        android:id="@+id/ConfirmParsingText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync"
        android:id="@+id/ConfirmParseBtn"
        android:background="#FFA401"
        android:layout_marginTop="30dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_below="@+id/ConfirmParsingText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:textColor="#ffffff"
        android:textStyle="normal"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/CancelParseBtn"
        android:background="#FFA401"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_above="@+id/ConfirmFilesText"
        android:layout_toRightOf="@+id/ConfirmParseBtn"
        android:layout_toEndOf="@+id/ConfirmParseBtn"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:textColor="#ffffff"
        android:textStyle="normal"
        android:textSize="15dp"
        android:onClick="onClickButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Files in folder:\n"
        android:id="@+id/ConfirmFilesText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ConfirmParseBtn"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ErrorMessage"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ConfirmFilesText"
        android:gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="20dp"
        android:textStyle="bold|normal" />




</RelativeLayout>