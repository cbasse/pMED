<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pmed.mindfulnessmeditation.AdminHome"
    android:background="#3a4f9c">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome, "
        android:id="@+id/TVwelcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/TVwelcome"
        android:layout_alignEnd="@id/TVwelcome"
        android:textColor="#ffffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/emptyString"
        android:id="@+id/TVadmin_name"
        android:layout_alignTop="@+id/TVwelcome"
        android:layout_toRightOf="@+id/TVwelcome"
        android:layout_toEndOf="@+id/TVwelcome"
        android:textColor="#ffffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Participant Accounts"
        android:id="@+id/button_user_accounts"
        android:layout_marginTop="56dp"
        android:background="@drawable/my_button"
        android:layout_below="@+id/TVwelcome"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        android:typeface="normal"
        android:onClick="onClickButton"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Experiment"
        android:id="@+id/button_update_experiment"
        android:layout_below="@+id/button_user_accounts"
        android:layout_alignRight="@+id/button_user_accounts"
        android:layout_alignEnd="@+id/button_user_accounts"
        android:layout_alignLeft="@+id/button_user_accounts"
        android:layout_alignStart="@+id/button_user_accounts"
        android:layout_marginTop="15dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        android:typeface="normal"
        android:background="@drawable/my_button"
        android:onClick="onClickButton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export Data"
        android:id="@+id/button3"
        android:layout_below="@+id/button_update_experiment"
        android:layout_alignRight="@+id/button_user_accounts"
        android:layout_alignEnd="@+id/button_user_accounts"
        android:layout_alignLeft="@+id/button_user_accounts"
        android:layout_alignStart="@+id/button_user_accounts"
        android:layout_marginTop="15dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        android:typeface="normal"
        android:background="@drawable/my_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignRight="@+id/button_user_accounts"
        android:layout_alignEnd="@+id/button_user_accounts"
        android:layout_alignLeft="@+id/button_user_accounts"
        android:layout_alignStart="@+id/button_user_accounts"
        android:layout_marginTop="15dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        android:typeface="normal"
        android:background="@drawable/my_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button_user_accounts"
        android:layout_alignStart="@+id/button_user_accounts"
        android:layout_alignRight="@+id/button_user_accounts"
        android:layout_alignEnd="@+id/button_user_accounts"
        android:layout_marginTop="15dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        android:typeface="normal"
        android:background="@drawable/my_button" />

</RelativeLayout>
