<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pmed.mindfulnessmeditation.MainActivity"
    android:background="#3a4f9c">

    <TextView
        android:text="Mindfulness Meditation"
        android:id="@+id/textView_mindfuleness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|normal"
        android:fontFamily="sans-serif-medium"
        android:textSize="50dp"
        android:textColor="#ffffffff" />

    <TextView
        android:text="THE PRACTICE OF LIVING IN THE MOMENT"
        android:id="@+id/textView_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView_mindfuleness"
        android:textStyle="normal|italic|bold"
        android:fontFamily="sans-serif-thin"
        android:textSize="22dp"
        android:textColor="#ffffffff" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pmed_logo"
        android:layout_below="@id/textView_quote"
        android:layout_marginTop="20dp" />


    <Button
        android:text="User"
        android:id="@+id/button_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:background="@drawable/my_button"
        android:layout_below="@+id/image_logo"
        android:layout_alignLeft="@+id/button_admin"
        android:layout_alignStart="@+id/button_admin"
        android:layout_alignRight="@+id/button_admin"
        android:layout_alignEnd="@+id/button_admin"
        android:layout_marginTop="25dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:typeface="normal" />

    <Button
        android:text="Administrator"
        android:id="@+id/button_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        android:typeface="normal"
        android:background="@drawable/my_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_below="@id/button_user" />

</RelativeLayout>
