<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pmed.mindfulnessmeditation.MainActivity"
    android:background="#3a4f9c">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/title">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mindfulness"
        android:id="@+id/textView9"
        android:textColor="#FFA401"
        android:textSize="50dp"
        android:layout_marginTop="35dp" />
    <TextView
        android:text="Meditation"
        android:id="@+id/textView_mindfuleness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="35dp"
        android:textSize="50dp"
        android:textColor="#ffffffff"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />
    </LinearLayout>

    <TextView
        android:text="THE PRACTICE OF LIVING IN THE MOMENT"
        android:id="@+id/textView_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:textStyle="normal|italic|bold"
        android:fontFamily="sans-serif-thin"
        android:textSize="22dp"
        android:textColor="#ffffffff" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pmed_logo"
        android:layout_below="@id/textView_quote"
        android:layout_marginTop="20dp" />


    <Button
        android:text="User"
        android:id="@+id/button_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:background="@drawable/my_button"
        android:layout_below="@+id/image_logo"
        android:layout_alignLeft="@+id/button_admin"
        android:layout_alignStart="@+id/button_admin"
        android:layout_alignRight="@+id/button_admin"
        android:layout_alignEnd="@+id/button_admin"
        android:layout_marginTop="25dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:typeface="normal" />

    <Button
        android:text="Administrator"
        android:id="@+id/button_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:textSize="20dp"
        android:typeface="normal"
        android:background="@drawable/my_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_below="@id/button_user" />

</RelativeLayout>
